@model CameraViewModel

<div class="container">
    <form method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger col-sm-offset-4 col-sm-8"></div>

        <div class="form-group">
            <label asp-for="Make" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <select asp-for="Make"
                        asp-items="Html.GetEnumSelectList<CameraMake>()" class="form-control"></select>
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Model" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="Price"
                       type="number" min="0" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="Quantity"
                       type="number" min="0" max="100" step="1" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MinShutterSpeed" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="MinShutterSpeed"
                       type="number" min="1" max="30" step="1" class="form-control" />
                <span asp-validation-for="MinShutterSpeed" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MaxShutterSpeed" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="MaxShutterSpeed"
                       type="number" min="2000" max="8000" step="1" class="form-control" />
                <span asp-validation-for="MaxShutterSpeed" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MinISO" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <select asp-for="MinISO"
                        asp-items="Html.GetEnumSelectList<MinIso>()" class="form-control"></select>
                <span asp-validation-for="MinISO" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MaxISO" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="MaxISO"
                       type="number" min="200" max="409600" step="100" class="form-control" />
                <span asp-validation-for="MaxISO" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IsFullFrame" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <label><input asp-for="IsFullFrame" type="radio" value="True" />Yes</label>
                <label><input asp-for="IsFullFrame" type="radio" value="False" />No</label>
                <span asp-validation-for="IsFullFrame" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="VideoResolution" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="VideoResolution"
                       maxlength="15" class="form-control" />
                <span asp-validation-for="VideoResolution" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LightMeterings" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                @{
                    var enumValues = Enum.GetValues(typeof(LightMetering)).Cast<LightMetering>();
                    foreach (var enumValue in enumValues)
                    {
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input"
                                   value="@((int)enumValue)" name="@(nameof(Model.LightMeterings))" />
                            @enumValue.ToDisplayName()
                        </label>
                    }
                }
                <span asp-validation-for="LightMeterings" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <textarea asp-for="Description" maxlength="6000" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="btn btn-block btn-primary">Save</button>
            </div>
        </div>

    </form>
</div>
