@model IEnumerable<SupplierWithTypeModel>

@{
    ViewData["Title"] = "All Suppliers";
}
<h2>
    @ViewData["Title"]
    <a class="btn btn-lg btn-primary" href="/suppliers/create">Add Supplier</a>
</h2>

<table class="table  table-bordered table-hover table-striped ">

    <thead>
        <tr>
            <th>Name</th>
            <th>Importer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Name</td>
                <td>@(supplier.IsImporter ? "Yes" : "No")</td>
                <td>
                    <a href="/suppliers/edit/@supplier.Id" class="btn btn-warning">Edit</a>
                    <a href="/suppliers/delete/@supplier.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>