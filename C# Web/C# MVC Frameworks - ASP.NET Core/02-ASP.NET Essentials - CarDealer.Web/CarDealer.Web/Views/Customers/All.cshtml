@model AllCustomersModel

@{
    ViewData["Title"] = "All Customers";
}

<h2>
    All Customers
    <a class="btn btn-lg btn-primary" href="/customers/create">Add Customer</a>
</h2>
<h3>In @Model.OrderDirection.ToString().ToLower() order</h3>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birth Date</th>
            <th>Is Young Driver</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.BirthDate.ToShortDateString()</td>
                <td>@(customer.IsYoungDriver ? "Yes" : "No")</td>
                <td><a href="/customers/edit/@customer.Id" class="btn btn-block btn-warning">Edit</a></td>
            </tr>
        }
    </tbody>
</table>